<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/spinnerStyle</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDividerStyle</item>
    </style>


    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GeneralDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TvNormalStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="BackArrowStyle">
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TvNormalHintStyle">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_compact_thin</item>
    </style>


    <style name="TvHeadingStyle">
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TvTitleStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/sf_compact_regular</item>
    </style>

    <style name="TvExtraHeadingStyle">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>


    <style name="buttonStyle" >
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:elevation">@dimen/_1sdp</item>>
        <item name="android:textAlignment">center</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>

    </style>


    <style name="editTextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingBottom">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">@color/transparent_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/edittext_background_new</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>



    <style name="editTextOutlineStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_outline_et</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>



    <style name="spinnerStyle">
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="itemTextColor">#FFFFFF</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:dropDownSelector">@android:color/white</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SpinnerDividerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


    <style name="layoutETStyle">
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/edittext_layout_background</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
