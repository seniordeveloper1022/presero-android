<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@color/colorPrimary"
tools:context="com.rapidzz.presero.Views.fragments.WoundDrainageFragment">



<ScrollView
    android:layout_width="match_parent"
    android:layout_above="@id/footor"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

           <androidx.cardview.widget.CardView
               app:cardBackgroundColor="@color/colorLightNavyBlue"
               app:cardElevation="@dimen/_5sdp"
               android:layout_width="match_parent"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@color/colorLightNavyBlue"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:padding="@dimen/_10sdp">


                   <TextView
                       style="@style/TvNormalStyle"
                       android:layout_marginLeft="@dimen/_20sdp"
                       android:layout_marginTop="@dimen/_20sdp"
                       android:textColor="@color/transparent_white"
                       android:lineSpacingExtra="@dimen/_7sdp"
                       android:text="Please Select\nWound drainage Amount"
                       android:textAlignment="textStart" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_40sdp"
                       android:orientation="vertical"
                       android:weightSum="1">


                       <Button
                           android:id="@+id/btnLowOrNone"
                           style="@style/buttonStyle"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_35sdp"
                           android:layout_marginLeft="@dimen/_30sdp"
                           android:layout_marginRight="@dimen/_30sdp"
                           android:background="@drawable/button_outline_grey"
                           android:text="@string/low_none" />

                       <Button
                           android:id="@+id/btnModerate"
                           style="@style/buttonStyle"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_35sdp"
                           android:layout_marginLeft="@dimen/_30sdp"
                           android:layout_marginTop="@dimen/_15sdp"
                           android:layout_marginRight="@dimen/_30sdp"
                           android:background="@drawable/button_outline_grey"
                           android:text="@string/moderate" />
                       <Button
                           android:id="@+id/btnHigh"
                           style="@style/buttonStyle"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_35sdp"
                           android:layout_marginLeft="@dimen/_30sdp"
                           android:layout_marginTop="@dimen/_15sdp"
                           android:layout_marginRight="@dimen/_30sdp"
                           android:background="@drawable/button_outline_grey"
                           android:text="@string/high" />

                   </LinearLayout>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_marginTop="@dimen/_35sdp"
                       android:background="@color/colorViewLine" />

                   <TextView
                       style="@style/TvNormalStyle"
                       android:textColor="@color/colorPink"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_marginTop="@dimen/_25sdp"
                       android:lineSpacingExtra="@dimen/_10sdp"
                       android:text="@string/wound_filler"
                       android:textAlignment="textStart" />
                   <TextView
                       style="@style/TvNormalStyle"
                       android:layout_marginLeft="@dimen/_15sdp"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:lineSpacingExtra="@dimen/_10sdp"
                       android:text="Is Filler Required?"
                       android:textAlignment="textStart" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="@dimen/_25sdp"
                       android:layout_marginTop="@dimen/_35sdp"
                       android:orientation="horizontal"
                       android:weightSum="1">

                       <Button
                           android:id="@+id/btnNo"
                           style="@style/buttonStyle"
                           android:layout_width="0dp"
                           android:layout_height="@dimen/_35sdp"
                           android:layout_marginLeft="@dimen/_15sdp"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:layout_marginRight="@dimen/_15sdp"
                           android:layout_weight=".5"
                           android:background="@drawable/button_outline_grey"
                           android:text="@string/no" />

                       <Button
                           android:id="@+id/btnYes"
                           style="@style/buttonStyle"
                           android:layout_width="0dp"
                           android:layout_height="@dimen/_35sdp"
                           android:layout_marginLeft="@dimen/_15sdp"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:layout_marginRight="@dimen/_15sdp"
                           android:layout_weight=".5"
                           android:background="@drawable/button_outline_grey"
                           android:text="@string/yes" />


                   </LinearLayout>



               </LinearLayout>

           </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
<LinearLayout
    android:id="@+id/footor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorLightNavyBlue"
    android:layout_alignParentBottom="true"
    android:weightSum="1"
    android:layout_height="@dimen/_45sdp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutBack"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_back" />
            <TextView
                android:text="Back"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                style="@style/TvNormalStyle"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/linearLayoutNext"
                android:text="Next"
                android:textSize="@dimen/_14sdp"
                android:enabled="false"
                android:textColor="@color/transparent_white"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_17sdp"
                android:layout_width="wrap_content"
                style="@style/TvNormalStyle"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:tint="@color/colorWhite"
                android:rotation="180"
                android:src="@drawable/ic_back" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

</RelativeLayout>